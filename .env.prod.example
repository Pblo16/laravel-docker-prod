# ==============================================
# Application Configuration
# ==============================================
APP_NAME=SAAS
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://url.com

# User timezone for display purposes
USER_TIMEZONE=America/Mexico_City

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ==============================================
# Deployment Configuration (Docker/Dokploy)
# ==============================================
AUTO_MIGRATE=true
AUTO_SEED=true

# Admin User Configuration
ADMIN_NAME="Admin Principal"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=password
ADMIN_IDENTIFIER=  # Set to previous email if changing ADMIN_EMAIL

# ==============================================
# Logging Configuration
# ==============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # Use 'error' for production, 'debug' for development

# ==============================================
# Database Configuration
# ==============================================
DB_CONNECTION=pgsql #mysql, pgsql, sqlite, sqlsrv
DB_HOST=
DB_PORT=
DB_DATABASE=
DB_USERNAME=
DB_PASSWORD=
# DB_ROOT_PASSWORD=  # Uncomment if using a separate root password

# ==============================================
# Session & Cache Configuration
# ==============================================
SESSION_DRIVER=database  # Options: file, cookie, database, redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null
SESSION_SECURE_COOKIE=false
SESSION_SAME_SITE=lax

CACHE_STORE=database  # Options: file, database, redis, memcached
CACHE_PREFIX=

# ==============================================
# Queue Configuration
# ==============================================
QUEUE_CONNECTION=database  # Options: sync, database, redis, sqs

# ==============================================
# Redis Configuration (Optional - for better performance)
# ==============================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis  # Use 'redis' for Docker, '127.0.0.1' for local
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==============================================
# Broadcasting Configuration (Optional)
# ==============================================
BROADCAST_CONNECTION=log  # Options: log, redis, pusher, reverb

# ==============================================
# Filesystem Configuration
# ==============================================
FILESYSTEM_DISK=local  # Options: local, public, s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# Mail Configuration
# ==============================================
MAIL_MAILER=log  # Options: smtp, sendmail, mailgun, ses, postmark, log
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls  # Options: tls, ssl, null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun Configuration (if using mailgun)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net

# Postmark Configuration (if using postmark)
POSTMARK_TOKEN=

# SES Configuration (if using AWS SES)
AWS_SES_KEY=
AWS_SES_SECRET=
AWS_SES_REGION=us-east-1

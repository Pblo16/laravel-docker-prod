# ==============================================
# Application Configuration
# ==============================================
APP_NAME=SAAS
APP_ENV=production
APP_KEY=
APP_DEBUG=false
APP_TIMEZONE=UTC
APP_URL=https://example.com

# User timezone for display purposes
USER_TIMEZONE=America/Mexico_City

APP_LOCALE=es
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4
BCRYPT_ROUNDS=12

# ==============================================
# Deployment Configuration (Docker/Dokploy)
# ==============================================
AUTO_MIGRATE=true
AUTO_SEED=true

# Admin User Configuration
ADMIN_NAME="Admin Principal"
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=change-this-password
ADMIN_IDENTIFIER=  # Set to previous email if changing ADMIN_EMAIL

# ==============================================
# Logging Configuration
# ==============================================
LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=error  # Use 'error' for production, 'debug' for development

# ==============================================
# Database Configuration
# ==============================================
DB_CONNECTION=mysql
DB_HOST=mysql  # Use 'mysql' for Docker, '127.0.0.1' for local
DB_PORT=3306
DB_DATABASE=database
DB_USERNAME=user
DB_PASSWORD=secure-password
DB_ROOT_PASSWORD=secure-root-password  # For Docker MySQL setup

# Database Manager (CloudBeaver)
DB_MANAGER_USER=admin
DB_MANAGER_PASSWORD=admin-password

# ==============================================
# Session & Cache Configuration
# ==============================================
SESSION_DRIVER=database  # Options: file, cookie, database, redis
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_STORE=database  # Options: file, database, redis, memcached
CACHE_PREFIX=

# ==============================================
# Queue Configuration
# ==============================================
QUEUE_CONNECTION=database  # Options: sync, database, redis, sqs

# ==============================================
# Redis Configuration (Optional - for better performance)
# ==============================================
REDIS_CLIENT=phpredis
REDIS_HOST=redis  # Use 'redis' for Docker, '127.0.0.1' for local
REDIS_PASSWORD=null
REDIS_PORT=6379

# ==============================================
# Broadcasting Configuration (Optional)
# ==============================================
BROADCAST_CONNECTION=log  # Options: log, redis, pusher, reverb

# ==============================================
# Filesystem Configuration
# ==============================================
FILESYSTEM_DISK=local  # Options: local, public, s3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# ==============================================
# Mail Configuration
# ==============================================
MAIL_MAILER=log  # Options: smtp, sendmail, mailgun, ses, postmark, log
MAIL_SCHEME=null
MAIL_HOST=smtp.mailtrap.io
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_ENCRYPTION=tls  # Options: tls, ssl, null
MAIL_FROM_ADDRESS="noreply@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# Mailgun Configuration (if using mailgun)
MAILGUN_DOMAIN=
MAILGUN_SECRET=
MAILGUN_ENDPOINT=api.mailgun.net

# Postmark Configuration (if using postmark)
POSTMARK_TOKEN=

# SES Configuration (if using AWS SES)
AWS_SES_KEY=
AWS_SES_SECRET=
AWS_SES_REGION=us-east-1

# ==============================================
# External Services (Optional)
# ==============================================

# Pusher/WebSockets
PUSHER_APP_ID=
PUSHER_APP_KEY=
PUSHER_APP_SECRET=
PUSHER_HOST=
PUSHER_PORT=443
PUSHER_SCHEME=https
PUSHER_APP_CLUSTER=mt1

# Reverb (Laravel's WebSocket server)
REVERB_APP_ID=
REVERB_APP_KEY=
REVERB_APP_SECRET=
REVERB_HOST=localhost
REVERB_PORT=8080
REVERB_SCHEME=http

# Stripe
STRIPE_KEY=
STRIPE_SECRET=
STRIPE_WEBHOOK_SECRET=

# ==============================================
# Vite Asset Configuration
# ==============================================
VITE_APP_NAME="${APP_NAME}"
VITE_PUSHER_APP_KEY="${PUSHER_APP_KEY}"
VITE_PUSHER_HOST="${PUSHER_HOST}"
VITE_PUSHER_PORT="${PUSHER_PORT}"
VITE_PUSHER_SCHEME="${PUSHER_SCHEME}"
VITE_PUSHER_APP_CLUSTER="${PUSHER_APP_CLUSTER}"

# ==============================================
# Additional Production Settings
# ==============================================

# Trusted Proxies (for load balancers/reverse proxies)
# TRUSTED_PROXIES=*
# TRUSTED_HOSTS=^example\.com$

# Asset URL (if using CDN)
# ASSET_URL=https://cdn.example.com

# Sentry Error Tracking (Optional)
# SENTRY_LARAVEL_DSN=
# SENTRY_TRACES_SAMPLE_RATE=1.0

# Scout Search (Optional)
# SCOUT_DRIVER=meilisearch
# MEILISEARCH_HOST=http://meilisearch:7700
# MEILISEARCH_KEY=

# Telescope (Laravel debugging - disable in production)
# TELESCOPE_ENABLED=false
